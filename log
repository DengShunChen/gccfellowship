   <script type="text/javascript">
    function carouselAds(hyperlinkNode, adInfoArray) {
   if ("undefined" === typeof hyperlinkNode || hyperlinkNode == null) {
       return;
   }
   if ("undefined" === typeof adInfoArray || adInfoArray.length < 1) {
      return;
   }
   
   var index = Math.floor(Math.random() * adInfoArray.length);
   hyperlinkNode.href = adInfoArray[index].targetUrl;
   createImgNode(hyperlinkNode, adInfoArray[index].imgUrl);
    
}

function createImgNode(hyperlinkNode, imgUrl) {  
    var imgElement = document.createElement("img");
    imgElement.style.width = "100%";  
    imgElement.style.height = "auto";  
    hyperlinkNode.appendChild(imgElement);  
    imgElement.src = imgUrl;
}
   </script>
